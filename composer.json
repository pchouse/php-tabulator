{
  "name": "pchouse/php-tabulator",
  "homepage": "https://github.com/pchouse/php-tabulator",
  "keywords": [
    "php",
    "Tabulator",
    "JavaScript",
    "TypeScript",
    "DataGrid"
  ],
  "type": "library",
  "description": "A library to use PHP attributes in class and properties to create the base configuration of to the Tabulator javascript library",
  "authors": [
    {
      "name": "JoÃ£o M F Rebelo",
      "homepage": "https://github.com/joaomfrebelo",
      "role": "developer",
      "email": "joao.rebelo@pchouse.pt"
    }
  ],
  "autoload": {
    "psr-4": {
      "PChouse\\": "src/"
    },
    "files": [
      "src/bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "PChouse\\": "test/"
    },
    "files": [
      "test/bootstrap.php"
    ]
  },
  "license": "MIT",
  "prefer-stable": true,
  "require": {
    "php": "~8.2 || ~8.3",
    "joaomfrebelo/log4php": "3.0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.8",
    "phpstan/phpstan": "^1.10",
    "sebastianbergmann/php-text-template": "^1.1",
    "jetbrains/phpstorm-attributes": ">=1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
